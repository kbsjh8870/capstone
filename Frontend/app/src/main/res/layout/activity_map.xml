<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!-- 상단 검색바 -->
    <LinearLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@color/white"
            android:elevation="4dp">

        <EditText
                android:id="@+id/et_destination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="목적지 입력"
                android:padding="12dp"
                android:background="@drawable/search_background"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1" />

        <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="검색" />
    </LinearLayout>
    <!-- 그림자 설정 토글 버튼 -->
    <Button
            android:id="@+id/btn_toggle_shadow_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_container"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:text="그림자 설정"
            android:textSize="12sp"
            android:padding="8dp" />

    <!-- 그림자 설정 패널 -->
    <LinearLayout
            android:id="@+id/shadow_settings_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_container"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:visibility="gone">

        <!-- 날짜/시간 설정 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날짜/시간: "
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/tv_selected_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp" />

            <Button
                    android:id="@+id/btn_select_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="변경"
                    android:textSize="12sp" />
        </LinearLayout>

        <!-- 그림자 옵션 -->
        <RadioGroup
                android:id="@+id/radio_group_shadow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

            <RadioButton
                    android:id="@+id/radio_avoid_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="그림자 피하기"
                    android:checked="true" />

            <RadioButton
                    android:id="@+id/radio_follow_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="그림자 따라가기"
                    android:layout_marginStart="16dp" />
        </RadioGroup>
    </LinearLayout>

    <!-- 경로 정보 표시 -->
    <TextView
            android:id="@+id/tv_route_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_container"
            android:background="#80000000"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:visibility="gone" />

    <!-- 경로 선택 버튼 컨테이너 -->
    <LinearLayout
            android:id="@+id/route_button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:background="#80FFFFFF"
            android:padding="8dp"
            android:elevation="4dp"
            android:visibility="gone" />

    <!-- 검색 결과 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_search_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_container"
            android:background="@color/white"
            android:elevation="4dp"
            android:visibility="gone" />

    <!-- 지도가 표시될 레이아웃 -->
    <RelativeLayout
            android:id="@+id/map_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_container">
    </RelativeLayout>

    <!-- 로딩 표시 -->
    <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
</RelativeLayout>